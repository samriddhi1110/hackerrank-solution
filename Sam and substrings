 public static int substrings(String n) {
        long mod = 1000000007;
        long totalSum = 0;
        long f = 0;  // f[i] = sum of all substrings ending at position i

        for (int i = 0; i < n.length(); i++) {
            int digit = n.charAt(i) - '0';
            f = (f * 10 + (long)(i + 1) * digit) % mod;
            totalSum = (totalSum + f) % mod;
        }

        return (int) totalSum;
    }
}
