   public static int toys(List<Integer> w) {
        if (w == null || w.isEmpty()) {
            return 0;
        }
        
        Collections.sort(w);
        
        int containerCount = 1;
        int minWeightInContainer = w.get(0);
        
        for (int i = 1; i < w.size(); i++) {
            int currentWeight = w.get(i);
            
            if (currentWeight > minWeightInContainer + 4) {
                containerCount++;
                minWeightInContainer = currentWeight;
            }
        }
        
        return containerCount;
    }
